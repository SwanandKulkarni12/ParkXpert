    <div class="container">
      <div class="forms-container">
        <div class="signin-signup">
          <form  class="sign-in-form form" method="POST">
            <h2 class="title">Login</h2>
            <div class="input-field">
              <i class="fas fa-user"></i>
              <input type="text" placeholder="Username" name="username"/>
            </div>
            <div class="input-field">
              <i class="fas fa-lock"></i>
              <input type="password" placeholder="Password" name="password" />
            </div>
            <input type="hidden" name="action" value="signup" id="action">
            <input type="submit" value="Login" class="btn">
            
          </form>
          <form id="register-form" class="sign-up-form form" method="POST" >
            <h2 class="title">Sign up</h2>
            <div class="input-field">
              <i class="fas fa-user"></i>
              <input type="text" id="username" name="username" placeholder="Username" required >
            </div>
            <div class="input-field">
              <i class="fas fa-envelope"></i>
              <input type="email" id="email" name="email" placeholder="Email" required>
            </div>
            <div class="input-field">
              <i class="fas fa-lock"></i>
              <input type="password" id="password" name="password" minlength="6" placeholder="Password
              " required>
            </div>
            <div class="input-field">
              <i class="fa fa-phone" aria-hidden="true"></i>
              <input type="tel" id="phone" name="phone" pattern="[0-9]{10}" placeholder="Contact Number" required>
              
            </div>
           
            <input type="hidden" name="action" value="signup" id="action">
            <input type="submit" value="Signup" class="btn">
          
          </form>
        </div>
      </div>

      <div class="panels-container">
        <div class="panel left-panel">
          <div class="content">
            <h3>New here ?</h3>
            <p>
              Find your spot, reserve your peace of mind. Sign Up now for hassle-free parking!
            </p>
            <button class="btn transparent" id="sign-up-btn">
              Sign up
            </button>
          </div>
          <img src="/Images/login-animate.svg" class="image" alt="" />
        </div>
        <div class="panel right-panel">
          <div class="content">
            <h3>Already User ?</h3>
            <p>
             Experience hassle-free parking with ParkXpert, log in to book your spot now!
            </p>
            <button class="btn transparent" id="sign-in-btn">
              Sign in
            </button>
          </div>
          <img src="/Images/Mobile login-pana.png" class="image" alt="" />
        </div>
      </div>
    </div>

